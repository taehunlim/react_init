{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"baseUrl": "src",
		"isolatedModules": true,
		"noImplicitAny": false,
		"removeComments": false,
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"keyofStringsOnly": true,
		"typeRoots": ["./src/@types", "./node_modules/@types"],
		"declaration": true
	},
	"typeRoots": [
		"node_modules/@types",
		"src/@type"
	],
	"exclude": [
		"node_modules",
		"build",
	],
	"include": [
		"src/**/*",
	]
}